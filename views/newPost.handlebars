<div class='row mt-4'>
	<div class='col-md-6'>
		<h3>Create New Post:</h3>

		<form class='form new-post-form' action='/api/createPost' method='POST'>
			<div class='form-group'>
				<label for='post-title'>Post title:</label>
				<input
					class='form-input'
					type='text'
					id='post-title'
					name='post-title'
				/>
			</div>
			<div class='form-group'>
				<label for='post-text'>Quick Descritpion of your page:</label>
				<input
					class='form-input'
					type='text'
					id='post-description'
					name='post-text'
				/>
			</div>
			<div class='form-group'>
				<label for='post-text'>Talk about your post:</label>
				<input
					class='form-input'
					type='text'
					id='post-text'
					name='post-content'
				/>
			</div>
			<div class='form-group'>
				<label for='post-image'>link image here:</label>
				<textarea
					class='form-input'
					id='post-image'
					name='post-image'
				></textarea>
			</div>
			<div class='form-group'>
				<button
					type='submit'
					class='btn btn-primary'
					id='submitBtn'
				>Create</button>
			</div>
		</form>
	</div>
</div>